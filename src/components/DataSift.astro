---
import { siteConfig } from "../config";
const DataSift_data = siteConfig.DataSift;
---

<!--title section-->
<section id="datasift" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div class="grid grid-cols-1 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4">
            <h2
                class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900"
            >
                {DataSift_data.name}
            </h2>
            <div
                class="w-[200px] h-[10px] mt-2 rounded-full"
                style={`background-color: ${DataSift_data.color}`}
            >
            </div>
        </div>
    </div>

    <!--description and skills-->
    <div>
        <p
            class={`text-lg font-mono sm:text-xl md:text-2xl leading-relaxed text-gray-700 mt-3 ${DataSift_data.repoLink ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
        >
            {DataSift_data.description}
        </p>
        <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
            {
                DataSift_data.skills.map((skill) => (
                    <span
                        class={`px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 ${
                            DataSift_data.repoLink
                                ? "group-hover:bg-gray-800"
                                : ""
                        }`}
                    >
                        {skill}
                    </span>
                ))
            }
        </div>
    </div>

    <!--RepoLink box-->
    <div class="lg:col-span-8">
        <div class="space-y-8">
            <div class="group relative">
                <!--RepoBox-->
                <a
                    href={DataSift_data.repoLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group relative p-16 max-w-2x1 w-full"
                >
                    <div
                        class="relative p-8 md:p-16 bg-white rounded-3xl border-2 border-gray-200 shadow-lg transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 hover:border-gray-300 mt-4"
                    >
                        <!-- Arrow icon in top-right -->
                        <div
                            class="absolute top-6 right-6 w-11 h-11 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700"
                            style={`background-color: ${DataSift_data.color}`}
                        >
                            <svg
                                class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M7 17L17 7M17 7H7M17 7V17"></path>
                            </svg>
                        </div>

                        <div class="pr-24">
                            <h3 class="text-2xl font-bold text-gray-900 mb-4">
                                {DataSift_data.repoTitle}
                            </h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
